# Ollama servers to monitor and route requests to (JSON array)
# Each server needs: name, host (ip:port), and ramGb (total RAM in GB)
# Optional: metricsPort overrides the fleet-metrics agent port (default 9100)
#   Set to 0 or null to disable metrics for a specific server
OLLAMA_SERVERS='[
  {"name": "GPU Server 1", "host": "192.168.1.100:11434", "ramGb": 16, "metricsPort": 9100},
  {"name": "GPU Server 2", "host": "192.168.1.101:11434", "ramGb": 24}
]'

# PostgreSQL connection settings for docker-compose
POSTGRES_USER=ollama_fleet
POSTGRES_PASSWORD=replace-with-strong-postgres-password
POSTGRES_DB=ollama_fleet

# PostgreSQL connection string used by the app (must match values above)
DATABASE_URL=postgresql://ollama_fleet:replace-with-strong-postgres-password@db:5432/ollama_fleet

# How often to poll Ollama servers for status (seconds)
POLL_INTERVAL=10

# Source name mapping: JSON object of IP -> friendly name
# Useful for identifying which service is making requests through the proxy
SOURCE_NAMES='{"172.28.0.1": "my-app"}'

# Admin credentials (used to seed the first user on initial setup)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=replace-with-strong-admin-password

# Telegram notifications (optional)
# Create a bot via @BotFather and get your chat ID via @userinfobot
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
