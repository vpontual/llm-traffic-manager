{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": ".test-dist",
    "rootDir": ".",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2022",
    "types": ["node"],
    "incremental": false,
    "plugins": []
  },
  "include": [
    "tests/**/*.ts",
    "src/lib/cron-utils.ts",
    "src/lib/types.ts",
    "src/lib/validations/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    ".test-dist"
  ]
}
